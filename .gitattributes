# Default to LF for source
*          text=auto eol=lf

# Windows scripts keep CRLF
*.ps1      text eol=crlf
*.bat      text eol=crlf
*.cmd      text eol=crlf

# Unixy scripts force LF
*.sh       text eol=lf

# Source & configs: LF
*.js       text eol=lf
*.mjs      text eol=lf
*.ts       text eol=lf
*.tsx      text eol=lf
*.json     text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.env      text eol=lf
Dockerfile text eol=lf
*.dockerignore text eol=lf
*.gitignore text eol=lf
.editorconfig text eol=lf
