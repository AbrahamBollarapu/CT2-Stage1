{
    "include":  [
                    "src/**/*.ts"
                ],
    "exclude":  [
                    "node_modules",
                    "dist"
                ],
    "compilerOptions":  {
                            "allowSyntheticDefaultImports":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "outDir":  "dist",
                            "strict":  false,
                            "module":  "commonjs",
                            "moduleResolution":  "node",
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck":  true,
                            "esModuleInterop":  true,
                            "target":  "ES2020",
                            "rootDir":  "src",
                            "lib":  [
                                        "ES2020"
                                    ],
                            "resolveJsonModule":  true
                        }
}